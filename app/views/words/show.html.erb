<div class="py-24 sm:py-32 mx-auto">
    <div class="mx-auto max-w-4xl sm:px-6 lg:px-8">
      <nav class="flex py-5" aria-label="Breadcrumb">
        <ol role="list" class="mx-auto lg:m-0 flex items-center space-x-4">
          <li>
            <div>
              <%= link_to root_path, class: 'text-gray-400 hover:text-gray-500' do %>
                <svg class="h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd" />
                </svg>
                <span class="sr-only">Home</span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
              </svg>
              <%= link_to 'Past words', words_path, class: 'ml-4 text-sm font-medium text-gray-500 hover:text-gray-700' %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
              </svg>
              <p class="ml-4 text-sm font-medium text-gray-500" aria-current="page"><%=@word_of_the_day %></p>
            </div>
          </li>
        </ol>
      </nav>

      <%= render partial: 'word_card', locals: {
        date: @date,
        word: @word_of_the_day,
        phonetic: @phonetic,
        definition: @definition,
        example: @example
      } %>
    </div>
</div>
