<%= render 'partials/container' do %>
  <div class="px-6lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Suggest a word</h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">Submit a suggestion for a new word of the day</p>
    </div>
  </div>
  <form class="px-8" action="/suggestions" method="post">
  <div class="space-y-12 sm:space-y-16">
    <div>
      <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="word" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Word</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input name="word" type="text" placeholder="Sigma" maxlength="40"  id="word" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-lime-600  sm:text-sm sm:leading-6">

          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="definition" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Definition <small class="text-slate-500">(Optional)</small></label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <textarea name="definition" id="definition" maxlength="250" placeholder="The 18th letter of the Greek alphabet "  rows="3" class="block w-full max-w-2xl rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-lime-600 sm:text-sm sm:leading-6"></textarea>
            <p class="mt-3 text-sm leading-6 text-gray-600">Give a definition of this word</p>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="phonetic" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Phonetic <small class="text-slate-500">(Optional)</small></label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input name="phonetic" type="text" placeholder="sig-mÉ™" maxlength="45"  id="phonetic" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-lime-600 sm:text-sm sm:leading-6">
            <p class="mt-3 text-sm leading-6 text-gray-600">Give the Phonetic of this word</p>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="example" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Example <small class="text-slate-500">(Optional)</small></label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <textarea name="example" id="example" maxlength="250" placeholder="Instead of following the crowd, she took a sigma approach and pursued her own path."  rows="3" class="block w-full max-w-2xl rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-lime-600 sm:text-sm sm:leading-6"></textarea>
            <p class="mt-3 text-sm leading-6 text-gray-600">Use the word in a sentence</p>
          </div>
        </div>

        <!-- hCaptcha field -->
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="captcha" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Captcha</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <div class="h-captcha" data-sitekey="<%= Hcaptcha.configuration.site_key %>"></div>
          </div>
        </div>

      </div>
    </div>

  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <button type="submit" class="inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Submit</button>
  </div>
</form>
<% end %>